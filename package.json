{
  "name": "sfvim-vscode",
	"displayName": "SFVim",
	"description": "A vscode extension that provides a vim-like interface, but is more straight-forward to use than the classic vim.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "sfvim-vscode.helloWorld",
				"title": "Hello World"
			}
		],
		"configuration":[
			{
				"title": "sfvim",
				"properties": {
					"sfvim.normalModeLineNumberRelative": {
						"type":	"boolean",
						"default": true
					},
					"sfvim.insertModeLineNumberRelative": {
						"type":	"boolean",
						"default": false
					},
					"sfvim.normalModeKeybindings": {
						"type": "array",
						"default": [
							{
								"command": "mode.insert",
								"bind": "e"
							},
							{
								"command": "mode.visual",
								"bind": "v"
							},
							{
								"command": "motion.up",
								"bind": "i"
							},
							{
								"command": "motion.down",
								"bind": "k"
							},
							{
								"command": "motion.left",
								"bind": "j"
							},
							{
								"command": "motion.right",
								"bind": "l"
							},
							{
								"command": "motion.skipLeft",
								"bind": "s"
							},
							{
								"command": "motion.skipRight",
								"bind": "f"
							},
							{
								"command": "motion.skipEndRight",
								"bind": "w"
							},
							{
								"command": "motion.top",
								"bind": "I"
							}
							,
							{
								"command": "motion.bottom",
								"bind": "K"
							}
						],
						"description": "SFVim specific commands can be mapped to any key using this."
					},
					"sfvim.insertModeKeybindings": {
						"type": "array",
						"default": [
							{
								"command": "mode.normal",
								"bind": "qq"
							}
						],
						"description": "SFVim specific commands can be mapped to any key using this."
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.63.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"@vscode/test-electron": "^1.6.2"
	}
}
